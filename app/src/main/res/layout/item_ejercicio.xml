<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/ejerimagen"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        android:contentDescription="@null" />

    <TextView
        android:id="@+id/tvNombre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nombre del Ejercicio"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/ejerimagen"
        app:layout_constraintTop_toTopOf="@+id/ejerimagen"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/ejerdescripcion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="DescripciÃ³n"
        app:layout_constraintStart_toStartOf="@+id/tvNombre"
        app:layout_constraintTop_toBottomOf="@+id/tvNombre"
        app:layout_constraintEnd_toEndOf="@+id/tvNombre"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/ejernivel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nivel"
        app:layout_constraintStart_toStartOf="@+id/tvNombre"
        app:layout_constraintTop_toBottomOf="@+id/ejerdescripcion"
        app:layout_constraintEnd_toEndOf="@+id/tvNombre"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/ejertipoimc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Tipo IMC"
        app:layout_constraintStart_toStartOf="@+id/tvNombre"
        app:layout_constraintTop_toBottomOf="@+id/ejernivel"
        app:layout_constraintEnd_toEndOf="@+id/tvNombre"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/btnAsignarEjercicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Asignar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.848"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ejertipoimc" />
</androidx.constraintlayout.widget.ConstraintLayout>
