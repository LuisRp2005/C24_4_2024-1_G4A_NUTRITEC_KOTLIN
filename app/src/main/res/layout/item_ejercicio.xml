<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <ImageView
        android:id="@+id/ejerimagen"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvNombre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nombre del Ejercicio"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:paddingTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/ejerimagen"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0" />

    <TextView
        android:id="@+id/ejerdescripcion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="DescripciÃ³n del ejercicio"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:paddingTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/tvNombre"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0" />

    <TextView
        android:id="@+id/ejernivel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nivel del ejercicio"
        android:textSize="14sp"
        android:textColor="@color/green"
        android:paddingTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/ejerdescripcion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0" />

    <TextView
        android:id="@+id/ejertipoimc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Tipo IMC"
        android:textSize="14sp"
        android:textColor="@color/green"
        android:paddingTop="4dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/ejernivel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0" />

</androidx.constraintlayout.widget.ConstraintLayout>
